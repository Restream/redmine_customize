<div class="contextual">
  <% User.current.visible_custom_buttons(@issues).each do |b| %>
    <%= link_to b.name,
                '#',
                :title => b.title,
                :data => { :new_values => custom_button_new_values(b) },
                :class => "icon custom-icon-#{b.image} custom-button" %>
  <% end %>
</div>
