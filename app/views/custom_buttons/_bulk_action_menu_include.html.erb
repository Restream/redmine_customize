<div class="contextual">
  <% User.current.visible_custom_buttons(@issues).each do |b| %>
    <%= link_to '#',
      title: b.title,
      data:  { new_values: custom_button_new_values(b) },
      class: 'custom-button' do %>
      <i class="fa <%= b.icon %>"></i> <%= b.name %>
    <% end %>
  <% end %>
</div>
