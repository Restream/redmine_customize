<% if authorize_for('issues', 'edit') %>
  <% User.current.visible_custom_buttons(@issue).each do |b| %>
    <%= link_to b.name,
                '#',
                :title => b.title,
                :data => { :new_values => custom_button_new_values(b, @issue) },
                :class => "icon custom-icon-#{b.image} custom-button" %>
  <% end %>
<% end %>
