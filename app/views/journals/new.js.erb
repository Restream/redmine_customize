insertTextAtCursor('issue_notes', "<%= raw escape_javascript(@content) %>");
<%
  # when quoting a private journal, check the private checkbox
  if @journal && @journal.private_notes?
%>
jql('#issue_private_notes').attr('checked', true);
<% end %>

showAndScrollTo("update", "notes");
jql('#notes').scrollTop = jql('#notes').scrollHeight - jql('#notes').clientHeight;
